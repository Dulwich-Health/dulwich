{
  "name": "skeleton",
  "version": "2.0.0",
  "description": "A starting point for an Online Store 2.0 built on top of skeleton",
  "scripts": {
    "dev": "run-p start tw",
    "start": "shopify theme dev -e dev --live-reload hot-reload",
    "start-sync": "shopify theme dev --theme-editor-sync --live-reload hot-reload -e dev",
    "pull": "shopify theme pull",
    "push": "shopify theme push",
    "dev-pull": "shopify theme pull -d -e dev",
    "dev-push": "shopify theme push -d -e dev",
    "pull-json": "shopify theme pull -d -o *.json -e dev",
    "share": "shopify theme share -e dev",
    "tw": "npx tailwindcss -i ./_styles/skeleton-base.css -o ./assets/custom.css --minify --watch"
  },
  "keywords": [
    "Shopify Theme",
    "Online Store 2.0"
  ],
  "authors": [
    "Marmeto",
    "Joel Dohm-Karatjas"
  ],
  "devDependencies": {
    "@shopify/cli": "^3.80.7",
    "@tailwindcss/line-clamp": "^0.4.4",
    "dotenv": "^16.6.0",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.3"
  }
}
