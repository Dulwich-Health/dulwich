<section class="page-width">
  <div class="practitioner-grid">
    <div class="grid">
      <!-- Left Side: Rich Text -->
      <div class="grid__item rich-text-container practitioner-left-wrapper">
        {% for block in section.blocks %}
          {% if block.type == 'richtext' %}
            <div class="rich-text">{{ block.settings.text_content }}</div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Right Side: App Blocks -->
      <div class="grid__item app-container practitioner-right-wrapper">
        {% for block in section.blocks %}
          {% if block.type == '@app' %}
            {% render block %}
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Practitioner Grid Section",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "include_margins",
      "default": true,
      "label": "Include Margins"
    }
  ],
  "blocks": [
    {
      "type": "@app"
    },
    {
      "type": "richtext",
      "name": "Rich Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text_content",
          "label": "Text Content",
          "default": "<p>Add your text here.</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Practitioner Grid Section",
      "category": "Custom",
      "blocks": [
        {
          "type": "richtext"
        }
      ]
    }
  ]
}
{% endschema %}

